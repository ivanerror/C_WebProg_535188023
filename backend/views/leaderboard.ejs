
  <%- include('./partials/tab.ejs')%>

  <div class="container">
    <div class="container my-5">
      <h3>Leaderboards</h3>
      <p style="color: grey;">Users with the most views of photos uploaded in the last 30 days.</p>

    </div>

    <div class="container">
      <div class="col py-5">
        <% for(var i=0; i < Img.length; i++) { %>
        <div class="row py-3">
          <h1 style="margin: 0;" class="pr-4"><%= i+1 %></h1>
          <div class="d-flex flex-column text-center pr-5">
            <p style="margin: 0;"><%= Img[i].views %></p>
            <p style="margin: 0;">Viewers</p>
          </div>
          <% for(var j=0; j < Img.length; j++){ %>
           <% if(leaderboardUser[j]._id == Img[i]._id){ %>
              <div class="profile-image pl-5 pr-3">
                <img src="<%= leaderboardUser[j].img_profile %>"/>
              </div>
              <div class="d-flex flex-column">
                <h3><%= leaderboardUser[j].username %></h3>
                <p><%= leaderboardUser[j].biography %></p>
              </div>           
           <% } %>
          <% } %>
        </div>
        <hr>
        <% } %>  
        </div>


      </div>
    </div>
  </div>

  <link rel="stylesheet" href="/css/leaderboard.css" />


